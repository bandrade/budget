		<navigation-case>
			<from-outcome>auditarBudget</from-outcome>
			<to-view-id>/pages/process/budget/auditarBudget.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>minhasTarefas</from-outcome>
			<to-view-id>/pages/process/minhasTarefas.xhtml</to-view-id>
			<redirect>true</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>aprovarBudget</from-outcome>
