	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>ajustarForecast</from-outcome>
			<to-view-id>/pages/process/forecast/ajustarForecast.xhtml</to-view-id>
