			<to-view-id>/pages/process/budget/ajustarValoresArea.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>inserirBudgetAprovado</from-outcome>
			<to-view-id>/pages/process/budget/inserirBudgetAprovado.xhtml</to-view-id>
		</navigation-case>
